<h1><strong><%= @list.name %></strong></h1>

<div class="row">
  <% @list.bookmarks.each do |bookmark| %>
    <div class="col-md-4">
      <div class="card mb-4">
        <img src="<%= bookmark.movie.poster_url %>" class="card-img-top" alt="<%= bookmark.movie.title %>">
        <div class="card-body">
          <h5 class="card-title"><%= bookmark.movie.title %></h5>
          <p class="card-text"><%= bookmark.comment %></p>
          <%= link_to "Delete", bookmark_path(bookmark), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<%= link_to "Add a movie", new_list_bookmark_path(@list), class: "btn btn-outline-secondary mb-3"%><br>

<%= link_to "Back to all lists", lists_path, class: "btn btn-outline-success mb-3" %>
