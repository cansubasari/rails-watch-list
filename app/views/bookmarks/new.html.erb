<h1>Add New Movie ➡️"<%= @list.name %>"</h1>

<%= simple_form_for [@list, @bookmark] do |f| %>
  <%= f.association :movie, prompt: "Choose a movie" %>
  <%= f.input :comment %>
  <%= f.button :submit, "Add Movie", class: "btn btn-outline-warning mt-2" %>
<% end %>

<%= link_to "Back to all lists", list_path(@list), class: "btn btn-primary mt-2" %>
